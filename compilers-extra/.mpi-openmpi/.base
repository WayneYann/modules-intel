#%Module 1.0 -*- tcl -*-
source [file dirname $::ModulesCurrentModulefile]/../../common/common_setup2.tcl
GeneralAppSetup ${version}/$distro/$m_arch 

# Additional conflicts
conflict  mpi-mvapich2 mpi-mpich3 mpi-mpich2 mpi-mpich

# Prereqs
# prereq name
if [ regexp -nocase {pgi} $version ] then {
    prereq pgi/12.3
} 

if [ regexp -nocase {icc} $version ] then {
    prereq icc/11.1.075
} 

if [ regexp -nocase {intel-15} $version ] then {
    #prereq intel/15
    AddDeps "intel/15"
} 

if [ regexp -nocase {intel-16} $version ] then {
    #prereq intel/16
    AddDeps "intel/16"
}

if [ regexp -nocase {gcc} $version ] then {
    prereq gcc/4.6.0
} 

# Specific setup goes here, license files, path setup, etc

prepend-path PATH $app_dir/bin
prepend-path MANPATH $app_dir/share/man
prepend-path LD_LIBRARY_PATH $app_dir/lib
prepend-path LIBRARY_PATH $app_dir/lib
prepend-path CPATH $app_dir/include

if {[catch {set myver [exec mpirun --version |& cat | head -n1 | awk "{print \$4 }" ] } e ]} {
    set myver none  
}
puts stderr "Current $module_name version: $myver"


## Added by hassanns on Nov 17, 2015
prepend-path LD_LIBRARY_PATH /usr/local/slurm/lib64
prepend-path LIBRARY_PATH /usr/local/slurm/lib64
setenv CC $app_dir/bin/mpicc
setenv CXX $app_dir/bin/mpic++
setenv FC $app_dir/bin/mpif90
