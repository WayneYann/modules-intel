#%Module 1.0 -*- tcl -*-

# Source common environment and then setup variables
source [file dirname $::ModulesCurrentModulefile]/../../../common/setup.tcl
GeneralAppSetup

# Load application based on module build
set ::module_to_load [string map {- /} $::module_build]
AddDeps "$module_to_load, texlive, applications-extra, java/8/u25"

# Specific setup goes here, license files, path setup, etc
prepend-path PATH $app_dir/bin
prepend-path LD_LIBRARY_PATH $app_dir/lib64:$app_dir/lib64/R/lib
prepend-path MANPATH $app_dir/share/man
prepend-path R_LIBS $::env(HOME)/local/R_libs

